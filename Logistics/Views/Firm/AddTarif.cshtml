@model Logistics.Models.Tarif

<link href="@Url.Content("~/Content/Firm.css")" rel="stylesheet" type="text/css" />

<style>
    .error {
    position: absolute;
    width: 200px;
    height: 30px;
    text-align: center;
    line-height: 30px;
    margin-left: 10px;
    display: inline-block;
    vertical-align: top;
    background: #ebf5ff;
    border: 1px solid #b1d3f5;
}
.error::before {
    content: url(http://zombiqwerty.ru/files/corner.gif);
    width: 13px;
    height: 6px;
    position: absolute;
    top: 4px;
    left: -10px;
}
</style>
<script type="text/javascript">
        function OnSuccess() {
            $("form").trigger("reset");
        };
       
</script>

<div id="result"></div>
    @using (Html.BeginForm("AddTarif", "Firm"))
    {
        @Html.AntiForgeryToken()
        <div class="back">
            <div id="mistake"></div>
            <h4>Добавление тарифа</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                @Html.LabelFor(model => model.Destination)
                <div>
                    @Html.EditorFor(model => model.Destination, new {@id="dest" })
                    @Html.ValidationMessageFor(model => model.Destination)
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.Price)
                <div>
                    @Html.HiddenFor(t => t.FirmId)
                    @Html.HiddenFor(t => t.Id)
                    @Html.EditorFor(model => model.Price, new { @id = "price" })
                    @Html.ValidationMessageFor(model => model.Price)
                </div>
            </div>

            <div style="margin-top:10px">
                <button type="submit" id="but">Создать</button>
            </div>
        </div>
    }
    



