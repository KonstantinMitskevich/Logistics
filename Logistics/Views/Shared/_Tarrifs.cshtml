@model Firm
@using Logistics.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}
<link href="~/Content/Firm.css" type="text/css" rel="stylesheet" />
<script src="~/Scripts/Firm.js" type="text/javascript"></script>

<div class="back">
    <table>
        <tr>
            <th>№</th>
            <th>Направлене</th>
            <th>Цена перевозки</th>
            <th>Изменить</th>
            <th>Удалить</th>
        </tr>
        @foreach (Tarif tarif in Model.Tarifs)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>@tarif.Destination</td>
                <td>@tarif.Price</td>
                @if (ViewContext.HttpContext.User.IsInRole("Фирма"))
                {
                    <td>@Html.ActionLink("Изменить", "AddTarif", new { id = tarif.Id })</td>
                    <td>@Html.ActionLink("Удалить", "DeleteTarifs", new { id = tarif.Id })</td>
                }
            </tr>
        }
    </table>
</div>
